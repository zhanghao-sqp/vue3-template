{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"#/*": ["types/*"],
			"@view": ["src/view/*"],
			"@components": ["src/components/*"],
			"@assets": ["src/assets/*"],
			"@common": ["src/common/*"],
			"@style": ["src/common/style/*"],
			"@hooks": ["src/hooks/*"],
			"@api": ["src/api/*"],
			"@router": ["src/router/*"],
			"@store": ["src/store/*"],
			"@utils": ["src/utils/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "types/*.d.ts", "types/*.ts"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
